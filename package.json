{
  "name": "backend",
  "version": "0.5.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "pm2": {
    "apps": [
      {
        "name": "skill-mapping-backend",
        "script": "dist/src/main.js",
        "instances": 1,
        "exec_mode": "fork",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3000
        }
      }
    ]
  },
  "scripts": {
    "build": "nest build",
    "deploy": "npm run build && npm run prisma:migrate:deploy && npm run pm2:reload",
    "deploy:full": "npm ci --only=production && npm run build && npm run prisma:generate && npm run prisma:migrate:deploy && npm run pm2:reload",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:reload": "pm2 reload ecosystem.config.js --env production || npm run pm2:start",
    "pm2:restart": "pm2 restart ecosystem.config.js --env production || npm run pm2:start",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:db:pull": "prisma db pull",
    "prisma:db:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "seed:api": "curl -X POST http://localhost:3000/admin/seed -H 'x-seed-token: your-token'",
    "seed:phase": "curl -X POST http://localhost:3000/admin/seed/foundation -H 'x-seed-token: your-token'",
    "db:setup": "prisma migrate dev && prisma db seed",
    "db:reset": "prisma migrate reset --force && prisma db seed",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "prisma generate && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2 reload ecosystem.config.js --env production || pm2 start ecosystem.config.js --env production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed:complete": "ts-node prisma/seed-complete-curriculum.ts"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">= 8.0.0",
    "yarn": ">= 1.22.0"
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "@brakebein/prisma-generator-nestjs-dto": "^1.28.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.6",
    "@node-rs/bcrypt": "^1.10.7",
    "@prisma/client": "^6.13.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.0",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "file-type-mime": "^0.4.7",
    "mysql2": "^3.14.3",
    "nestjs-prisma": "^0.25.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.9.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "prisma-erd-generator": "^2.0.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
