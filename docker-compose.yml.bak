services:
  backend:
    container_name: skillmap_backend
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    command: npm run start:prod
    volumes:
      - ./src:/usr/src/app/src
      - ./prisma:/usr/src/app/prisma
  
